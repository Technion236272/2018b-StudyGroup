<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="700dp"
        android:layout_height="1px"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:background="@color/browser_actions_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/groupPhotoInfo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/group_picture"
            app:srcCompat="@drawable/studygroup1" />

        <TextView
            android:id="@+id/groupSubjectInfo"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/groupPhotoInfo"
            android:layout_toLeftOf="@+id/groupMeetingDate"
            android:layout_toRightOf="@+id/groupPhotoInfo"
            android:layout_toStartOf="@+id/groupMeetingDate"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/groupIdAndName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupSubjectInfo"
            android:layout_toEndOf="@+id/groupPhotoInfo"
            android:layout_toRightOf="@+id/groupPhotoInfo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/groupMeetingDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/groupNumberOfParticipantsInfo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/groupMeetingDate"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>